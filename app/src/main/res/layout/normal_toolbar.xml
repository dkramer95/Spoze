<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/overlay_color"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/calibrateButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_ripple"
        android:onClick="calibrateButtonClicked"
        android:tint="@color/button_selector"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_calibrate"/>

    <ImageButton
        android:id="@+id/motionButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_ripple"
        android:onClick="motionButtonClicked"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_motion"/>

    <ImageButton
        android:id="@+id/importButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_ripple"
        android:onClick="importButtonClicked"
        android:tint="@color/button_selector"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_import"/>


    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true" />

    <ImageButton
        android:id="@+id/shutterButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_ripple"
        android:onClick="screenshotButtonClicked"
        android:tint="@color/button_selector"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_shutter"/>

</LinearLayout>
