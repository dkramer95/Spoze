<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/rotateCCWButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_ripple"
        android:foregroundTint="@color/button_selector"
        android:onClick="rotateCounterClockwiseButtonClicked"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_ccw"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/rotateCWButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_ripple"
        android:foregroundTint="@color/button_selector"
        android:onClick="rotateClockwiseButtonClicked"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cw"
        android:textColor="@android:color/background_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="blankAreaClicked" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/delete_ripple"
        android:onClick="deleteModelButtonClicked"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_x"
        android:textColor="@android:color/background_light"
        android:tint="@color/delete_button_selector" />

</LinearLayout>
